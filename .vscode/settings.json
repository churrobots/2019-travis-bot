{
  // "remote.containers.workspaceMountConsistency": "delegated",
  "java.configuration.updateBuildConfiguration": "automatic",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "bin/": true,
    ".classpath": true,
    ".project": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // Ensure builds don't require internet connection, since we might not
  // have that connection at competition.
  "wpilib.offline": true,

  // Keep workspace clean. Don't show git branch since we want to generally
  // keep workflow in Github Desktop for consistency.
  "wpilib.autoStartRioLog": false,
  "git.enabled": false,
  "scm.alwaysShowProviders": false

}
